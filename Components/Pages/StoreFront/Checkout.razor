@page "/checkout"
@using System.Text
@using MaillotStore.Data
@using MaillotStore.Models
@using MaillotStore.Services
@using MaillotStore.Services.Implementations
@using MaillotStore.Services.Interfaces
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject StateContainer StateContainer
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ApplicationDbContext DbContext
@inject ReferralService ReferralService
@inject IOrderStateService OrderStateService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject ICartService CartService
@inject NotchPayService NotchPayService
@inject IConfiguration Configuration
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ILogger<Checkout> Logger
@inject WhatsAppService WhatsAppService
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Checkout</PageTitle>

<div class="container my-5">
    <div class="checkout-container">
        <h1 class="text-center mb-4">Check Out</h1>

        @* --- ORDER SUMMARY --- *@
        <div class="order-summary mb-5">
            <h2 class="mb-3">Your Order Summary</h2>

            @if (orderItems.Any())
            {
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in orderItems)
                        {
                            <tr>
                                <td data-label="Product">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-fluid me-3" style="width: 50px;">
                                        <div>
                                            <strong>@item.Product.Name</strong><br>
                                            <div class="d-flex align-items-center mt-1">
                                                <span class="text-muted me-2">Size:</span>
                                                <select class="form-select form-select-sm bg-dark text-white" style="width: 80px;"
                                                        @onchange="(e) => UpdateSize(item, e)">
                                                    @foreach (var size in availableSizes)
                                                    {
                                                        <option value="@size" selected="@(size == item.Size)">@size</option>
                                                    }
                                                </select>
                                            </div>
                                            @if (!string.IsNullOrEmpty(item.CustomName) || item.CustomNumber.HasValue)
                                            {
                                                <div class="customization-display">
                                                    <small><em>Custom: @item.CustomName, #@item.CustomNumber</em></small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td data-label="Quantity">
                                    <div class="d-flex align-items-center justify-content-end">
                                        <button class="btn btn-sm btn-outline-light me-2" @onclick="() => UpdateQuantity(item, item.Quantity - 1)">-</button>
                                        <span>@item.Quantity</span>
                                        <button class="btn btn-sm btn-outline-light ms-2" @onclick="() => UpdateQuantity(item, item.Quantity + 1)">+</button>
                                    </div>
                                </td>
                                <td data-label="Price">FCFA @item.Price.ToString("N0") XAF</td>
                                <td data-label="Remove">
                                    <a href="#" class="text-danger" @onclick:preventDefault @onclick="() => RemoveFromCart(item)">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-end">
                    <h3>SUBTOTAL: FCFA @Subtotal.ToString("N0") XAF</h3>
                </div>
            }
            else
            {
                <div class="text-center p-4">
                    <p>Your cart is currently empty.</p>
                    <button class="btn btn-dark" @onclick='() => NavigationManager.NavigateTo("/shop")'>
                        Go to Shop
                    </button>
                </div>
            }
        </div>

        @* --- CUSTOMER DETAILS --- *@
        <div class="customer-details">
            <h2 class="mb-3">Customer Details</h2>
            <div class="mb-3">
                <input type="text" class="form-control form-control-dark" placeholder="Name (Required)" @bind="customerName">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control form-control-dark" placeholder="Phone Number (Required)" @bind="customerPhone">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control form-control-dark" placeholder="Delivery Address (Required)" @bind="customerAddress">
            </div>
            <div class="mb-3">
                <textarea class="form-control form-control-dark" rows="4" placeholder="Message (Optional)" @bind="optionalMessage"></textarea>
            </div>

            @* --- Payment Method Selection --- *@
            <h4 class="mt-4 mb-3">Payment Method</h4>
            <div class="payment-methods mb-4">
                <div class="form-check p-3 mb-2" style="border: 1px solid #444; border-radius: 5px; background-color: rgba(255,255,255,0.05);">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payOnline"
                           checked="@(paymentMethod == "NotchPay")"
                           @onchange='() => paymentMethod = "NotchPay"'>
                    <label class="form-check-label text-white" for="payOnline">
                        <strong>Pay Online (Instant)</strong> <br />
                        <small class="text-muted">MTN MoMo, Orange Money, Visa</small>
                    </label>
                </div>

                <div class="form-check p-3" style="border: 1px solid #444; border-radius: 5px; background-color: rgba(255,255,255,0.05);">
                    <input class="form-check-input" type="radio" name="paymentMethod" id="payCod"
                           checked="@(paymentMethod == "CashOnDelivery")"
                           @onchange='() => paymentMethod = "CashOnDelivery"'>
                    <label class="form-check-label text-white" for="payCod">
                        <strong>WhatsApp / Cash on Delivery</strong> <br />
                        <small class="text-muted">Order via WhatsApp and pay later.</small>
                    </label>
                </div>
            </div>
        </div>

        @* --- CHECKOUT BUTTON --- *@
        <div class="d-grid gap-2 mt-4">
            <button class="btn btn-lg btn-success"
                    disabled="@(!orderItems.Any() || string.IsNullOrWhiteSpace(customerName) || string.IsNullOrWhiteSpace(customerPhone) || string.IsNullOrWhiteSpace(customerAddress))"
                    @onclick="PlaceOrder">
                @(paymentMethod == "NotchPay" ? $"Pay {Subtotal:N0} FCFA Now" : "Check Out Via WhatsApp")
            </button>
        </div>
    </div>
</div>

@code {
    private List<OrderItem> orderItems = new();
    private decimal Subtotal => orderItems.Sum(item => item.Price * item.Quantity);

    private string customerName = string.Empty;
    private string customerPhone = string.Empty;
    private string customerAddress = string.Empty;
    private string optionalMessage = string.Empty;

    private string paymentMethod = "NotchPay";

    private List<string> availableSizes = new() { "S", "M", "L", "XL", "XXL" };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var stagedItem = OrderStateService.GetStagedOrder();
            if (stagedItem != null && stagedItem.OrderItems != null && stagedItem.OrderItems.Any())
            {
                orderItems = stagedItem.OrderItems.ToList();
            }
            else
            {
                orderItems = CartService.GetCartItems();
            }

            CartService.OnChange += HandleCartChanged;
            StateHasChanged();
        }
    }

    private void HandleCartChanged()
    {
        orderItems = CartService.GetCartItems();
        InvokeAsync(StateHasChanged);
    }

    private async Task PlaceOrder()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to place this order?");
        if (!confirmed) return;

        if (!orderItems.Any() ||
            string.IsNullOrWhiteSpace(customerName) ||
            string.IsNullOrWhiteSpace(customerPhone) ||
            string.IsNullOrWhiteSpace(customerAddress))
        {
            return;
        }

        using var context = DbFactory.CreateDbContext();

        var orderItemsForDb = new List<OrderItem>();
        foreach (var item in orderItems)
        {
            var productFromDb = await context.Products.FindAsync(item.Product.ProductId);
            if (productFromDb != null)
            {
                orderItemsForDb.Add(new OrderItem
                {
                    Product = productFromDb,
                    Quantity = item.Quantity,
                    Price = item.Price,
                    Size = item.Size,
                    CustomName = item.CustomName,
                    CustomNumber = item.CustomNumber
                });
            }
        }

        // Commission Logic
        var commissionSetting = await context.CommissionSettings.FirstOrDefaultAsync();
        if (commissionSetting == null)
        {
            commissionSetting = new CommissionSetting { CurrentRate = 0.07m };
            context.CommissionSettings.Add(commissionSetting);
            await context.SaveChangesAsync();
        }

        decimal orderCommission = 0;
        string referralCode = ReferralService.GetReferralCode();
        if (string.IsNullOrEmpty(referralCode))
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user.Identity.IsAuthenticated && user.IsInRole("Influencer"))
            {
                var appUser = await UserManager.GetUserAsync(user);
                if (appUser != null && !string.IsNullOrEmpty(appUser.ReferralCode))
                {
                    referralCode = appUser.ReferralCode;
                }
            }
        }

        bool hasReferralCode = !string.IsNullOrEmpty(referralCode);
        if (hasReferralCode) orderCommission = Subtotal * commissionSetting.CurrentRate;

        // Create Order
        var order = new Order
        {
            CustomerName = customerName,
            CustomerPhone = customerPhone,
            CustomerAddress = customerAddress,
            OrderDate = DateTime.UtcNow,
            OrderItems = orderItemsForDb,
            TotalAmount = Subtotal,
            ReferralCode = referralCode,
            Status = "Pending",
            CommissionAmount = orderCommission,
            OptionalMessage = string.IsNullOrWhiteSpace(optionalMessage) ? "" : optionalMessage,
            IsVisibleToInfluencer = hasReferralCode,
            PaymentMethod = paymentMethod,
            PaymentStatus = "Pending",
            PaymentReference = $"ORD-{DateTime.Now.Ticks}-{new Random().Next(1000, 9999)}"
        };

        context.Orders.Add(order);
        await context.SaveChangesAsync();
        OrderStateService.NotifyOrderPlaced();

        Logger.LogInformation($"Order {order.Id} placed with reference {order.PaymentReference}. Method: {paymentMethod}");

        if (paymentMethod == "NotchPay")
        {
            // >>> ONLINE PAYMENT FLOW <<<

            var callbackUrl = NavigationManager.ToAbsoluteUri("/payment-callback").ToString();
            var email = "customer@maillotstore.store";

            Logger.LogInformation($"Initializing NotchPay for {order.PaymentReference} with callback {callbackUrl}");

            var initResponse = await NotchPayService.InitializePaymentAsync(order.TotalAmount, email, order.PaymentReference, callbackUrl);

            if (initResponse != null && !string.IsNullOrEmpty(initResponse.AuthorizationUrl))
            {
                if (!string.IsNullOrEmpty(initResponse.Reference) && initResponse.Reference != order.PaymentReference)
                {
                    Logger.LogInformation($"Updating Order Reference from {order.PaymentReference} to {initResponse.Reference}");
                    order.PaymentReference = initResponse.Reference;
                    await context.SaveChangesAsync();
                }

                // REMOVED THE CLEAR CART LOGIC FROM HERE.
                // The cart stays full until they actually pay!

                Logger.LogInformation($"Redirecting to NotchPay: {initResponse.AuthorizationUrl}");
                NavigationManager.NavigateTo(initResponse.AuthorizationUrl);
            }
            else
            {
                Logger.LogError("NotchPay initialization failed.");
                await JSRuntime.InvokeVoidAsync("alert", "Could not initialize payment. Please try again or use WhatsApp.");
            }
        }
        else
        {
            // >>> WHATSAPP / CASH ON DELIVERY FLOW <<<

            // --- SPEED FIX: Run Background Task (Fire and Forget) ---
            _ = Task.Run(async () =>
            {
                try
                {
                    await WhatsAppService.SendOrderNotificationsAsync(order);
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Failed to send background WhatsApp notification");
                }
            });
            // --------------------------------------------------------

            var messageBuilder = new StringBuilder();
            messageBuilder.AppendLine("Hello Maillot Store,");
            messageBuilder.AppendLine();
            messageBuilder.AppendLine($"An order has been placed (Order ID: {order.Id}):");
            messageBuilder.AppendLine($"  Name: {customerName}");
            messageBuilder.AppendLine($"  Phone: {customerPhone}");
            messageBuilder.AppendLine($"  Address: {customerAddress}");
            messageBuilder.AppendLine();
            messageBuilder.AppendLine($"  Total: FCFA {Subtotal:N0} XAF");
            messageBuilder.AppendLine("I am waiting for confirmation.");

            var adminSetting = await context.AdminSettings.FirstOrDefaultAsync(s => s.Key == "AdminWhatsAppNumber");
            var adminPhoneNumber = adminSetting?.Value?.Replace("+", "").Replace(" ", "") ?? "237671007313";
            if (!adminPhoneNumber.StartsWith("237")) adminPhoneNumber = "237" + adminPhoneNumber;

            string whatsappUrl = $"https://wa.me/{adminPhoneNumber}?text={Uri.EscapeDataString(messageBuilder.ToString())}";

            await JSRuntime.InvokeVoidAsync("open", whatsappUrl, "_blank");

            // Clear Cart here because Cash on Delivery means they finalized the checkout process.
            CartService.ClearCart();
            OrderStateService.ClearStagedOrder();
            NavigationManager.NavigateTo("/shop");
        }
    }

    private void RemoveFromCart(OrderItem item)
    {
        CartService.RemoveFromCart(item);
    }

    private void UpdateQuantity(OrderItem item, int quantity)
    {
        CartService.UpdateQuantity(item, quantity);
    }

    private void UpdateSize(OrderItem item, ChangeEventArgs e)
    {
        var newSize = e.Value?.ToString();
        if (!string.IsNullOrEmpty(newSize))
        {
            CartService.UpdateSize(item, newSize);
        }
    }

    public void Dispose()
    {
        CartService.OnChange -= HandleCartChanged;
    }
}