@using MaillotStore.Models
@using MaillotStore.Services
@using MaillotStore.Components.Shared
@inject StateContainer StateContainer
@inject NavigationManager NavigationManager

@* UPDATED:
   - Added fixed height for mobile (h-350px or similar) to ensure 65% calculation works.
   - On desktop (md), we let it grow or set a different height.
   - overflow-hidden prevents content from pushing out.
*@
<div class="product-card border-0 shadow-sm d-flex flex-column" style="height: 350px; overflow: hidden;">

    @* UPDATED:
       - height: 65% forced.
       - position-relative for the share button.
    *@
    <div class="product-image-container position-relative" style="height: 65%; width: 100%; background-color: #f8f9fa;">
        <a href="/product/@Product.ProductId" class="d-block h-100 w-100">
            <img src="@Product.ImageUrl" class="w-100 h-100" alt="@Product.Name" style="object-fit: cover;">
        </a>

        <AuthorizeView Roles="Influencer">
            <button @onclick="ToggleShareModal" class="product-share-icon-button position-absolute top-0 end-0 m-2 btn btn-light rounded-circle btn-sm shadow-sm" style="z-index: 10;">
                <i class="fas fa-share-alt"></i>
            </button>
        </AuthorizeView>
    </div>

    @* UPDATED:
       - height: 35% forced.
       - p-2 for padding.
       - d-flex flex-column to organize text and buttons.
    *@
    <div class="card-body p-2 d-flex flex-column justify-content-between" style="height: 35%; background-color: white;">

        <div class="text-content" style="overflow: hidden;">
            @* Title: Truncate to 1 line to save space *@
            <h5 class="card-title text-truncate mb-1" style="font-size: 0.95rem; font-weight: 600;">
                <a href="/product/@Product.ProductId" class="text-decoration-none text-dark">@Product.Name</a>
            </h5>

            @* Price & Season Row *@
            <div class="d-flex justify-content-between align-items-center mb-1">
                <p class="card-price text-primary fw-bold mb-0" style="font-size: 0.9rem;">
                    @($"FCFA {Product.Price:N0}")
                </p>
                <span class="badge bg-light text-dark border" style="font-size: 0.7rem;">@Product.Season</span>
            </div>
        </div>

        @* Buttons: Compact Grid *@
        <div class="row g-1 mt-auto">
            <div class="col-8">
                <a href="/product/@Product.ProductId" class="btn btn-outline-dark btn-sm w-100 d-flex align-items-center justify-content-center" style="font-size: 0.8rem; padding: 0.25rem 0;">
                    Details
                </a>
            </div>
            <div class="col-4">
                <button @onclick="() => AddToCartAndNavigate(Product)" class="btn btn-dark btn-sm w-100 d-flex align-items-center justify-content-center" style="font-size: 0.8rem; padding: 0.25rem 0;">
                    <i class="fas fa-cart-plus"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<ShareModal Product="Product" IsVisible="isShareModalVisible" OnClose="ToggleShareModal" />


@code {
    [Parameter]
    public Product Product { get; set; } = new();

    private bool isShareModalVisible = false;

    private void ToggleShareModal()
    {
        isShareModalVisible = !isShareModalVisible;
    }

    private async Task AddToCartAndNavigate(Product product)
    {
        var defaultSize = product.Sizes?.Split(',').FirstOrDefault()?.Trim() ?? "M";
        await StateContainer.AddToCart(product, 1, defaultSize, null, null);
        NavigationManager.NavigateTo("/checkout");
    }
}